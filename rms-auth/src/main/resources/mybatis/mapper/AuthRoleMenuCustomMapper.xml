<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.still.rms.auth.dao.AuthRoleMenuCustomMapper">

    <delete id="deleteByRoleId" parameterType="java.lang.Long">
        delete from auth_role_menu
        where role_id = #{roleId,jdbcType=BIGINT}
    </delete>
    <delete id="deleteByMenuId" parameterType="java.lang.Long">
        delete from auth_role_menu
        where menu_id = #{menuId,jdbcType=BIGINT}
    </delete>

    <insert id="insertList">
        INSERT INTO auth_role_menu (role_id, menu_id) VALUES
        <foreach collection="list" separator="," item="item" index="index">
            (#{item.roleId,jdbcType=BIGINT},
            #{item.menuId,jdbcType=BIGINT})
        </foreach>
    </insert>
</mapper>